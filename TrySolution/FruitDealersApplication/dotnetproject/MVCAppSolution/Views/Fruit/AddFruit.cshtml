@model BookStoreApp.Models.Fruit

@{
    ViewData["Title"] = "Add Fruit";
}

<h2>Add Fruit</h2>

<form asp-controller="Fruit" asp-action="AddFruit" method="post">
    <div class="form-group">
        <label for="FruitName">Fruit Name</label>
        <input type="text" class="form-control" id="FruitName" name="FruitName" placeholder="Enter Fruit name" required>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" placeholder="Enter Description" required>
    </div>
    <div class="form-group">
        <label for="Color">Color</label>
        <input type="text" class="form-control" id="Color" name="Color" placeholder="Enter Color" required>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" id="Price" name="Price" placeholder="Enter Price" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Fruit</button>
</form>
